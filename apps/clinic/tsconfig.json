{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "common/*": ["common/*"],
      "modules/*": ["modules/*"],
      "@AvixoIcons/*": ["../share-components/src/components/AvixoIcons/*"],
      "@ShareComponents/*": ["../share-components/src/components/*"],
      "@AvixoUtils/*": ["../share-components/src/utils/*"],
      "@AvixoServices/*": ["../share-components/src/services/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "middleware.ts"],
  "exclude": ["node_modules", "cypress"]
}
